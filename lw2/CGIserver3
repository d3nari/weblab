PROGRAM HelloFriend(INPUT, OUTPUT);
USES DOS;
VAR
  Query, Name, Test: STRING;
  I: INTEGER;
BEGIN
  WRITELN('Content-Type: text/html');
  WRITELN;
  Query := GetEnv('QUERY_STRING');

  IF (Length(Query) > 0)
  THEN
    BEGIN
      Test := Copy(Query, 1, 5);
      IF Test = 'name='
      THEN 
        BEGIN
          I := POS('=', Query) + 1
          Name := Copy(Query, 6, Length(Query) - I);
          IF Length(Name) > 0
          THEN
            WRITELN('Hello Dear, ', Name, '!')
        END
      ELSE
        WRITELN('Hello Anonymous!')
    END

END.
